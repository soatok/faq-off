{% extends "base.twig" %}

{% block main %}
<h1>Custom File Manager</h1>
<div id="file-manager-wrapper" data-csrf="{{ anti_csrf_ajax() }}">
    <div id="file-manager-header">
        Current directory: <code id="current-dir"></code>
    </div>
    <table id="file-listing-table" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody id="file-listing">
            <tr><td colspan="5">Loading&hellip;</td></tr>
        </tbody>
    </table>
    <div class="form-group">
        <a href="/admin/custom/create" id="create-file-link" class="btn btn-verydark">Create New File</a>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
        <input type="text" id="file-mkdir-text" placeholder="new-directory-name" class="form-control" />
        </div>
        <div class="col-sm-6">
            <button type="button" class="btn btn-verydark" id="file-mkdir-button">
                Make Directory
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="/static/admin-custom.js" nonce="{{ csp_nonce() }}"></script>
{% endblock %}